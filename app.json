{
  "expo": {
    "name": "PeptidePal",
    "slug": "peptidepal",
    "version": "1.1.1",
    "runtimeVersion": "1.1.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#008080"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jiveshbhatti.peptidepal",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCalendarsUsageDescription": "PeptidePal needs access to your calendar to help schedule peptide doses.",
        "NSPhotoLibraryUsageDescription": "PeptidePal needs access to your photo library to save peptide images.",
        "NSUserNotificationUsageDescription": "PeptidePal sends notifications to remind you when it's time to take your doses and alerts you about expiring vials."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#008080"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.jiveshbhatti.peptidepal",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "PeptidePal needs access to your photo library to save peptide images."
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "PeptidePal needs access to your calendar to help schedule peptide doses."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#008080",
          "sounds": []
        }
      ],
      [
        "@config-plugins/react-native-siri-shortcut",
        {
          "siriShortcutsActivities": [
            {
              "title": "Log Morning Dose",
              "phrase": "Log morning dose",
              "isEligibleForSearch": true,
              "isEligibleForPrediction": true,
              "needsUserConfirmation": false,
              "activityType": "com.jiveshbhatti.peptidepal.LogMorningDose",
              "keywords": ["peptide", "dose", "morning", "log", "AM"],
              "persistentIdentifier": "LogMorningDose",
              "isEligibleForPublicIndexing": false
            },
            {
              "title": "Log Evening Dose",
              "phrase": "Log evening dose",
              "isEligibleForSearch": true,
              "isEligibleForPrediction": true,
              "needsUserConfirmation": false,
              "activityType": "com.jiveshbhatti.peptidepal.LogEveningDose",
              "keywords": ["peptide", "dose", "evening", "log", "PM"],
              "persistentIdentifier": "LogEveningDose",
              "isEligibleForPublicIndexing": false
            },
            {
              "title": "Check Remaining Doses",
              "phrase": "How many doses left",
              "isEligibleForSearch": true,
              "isEligibleForPrediction": true,
              "needsUserConfirmation": false,
              "activityType": "com.jiveshbhatti.peptidepal.CheckRemainingDoses",
              "keywords": ["peptide", "doses", "remaining", "check", "left"],
              "persistentIdentifier": "CheckRemainingDoses",
              "isEligibleForPublicIndexing": false
            }
          ]
        }
      ]
    ],
    "owner": "jiveshbhatti",
    "extra": {
      "eas": {
        "projectId": "811f36ad-1a77-4e72-b5c0-c9ababf645bc"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    }
  }
}
